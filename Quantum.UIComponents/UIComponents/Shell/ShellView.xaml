<Window x:Class="Quantum.UIComponents.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uiCore="clr-namespace:Quantum.UIComponents"
        xmlns:p="clr-namespace:Quantum.UIComposition;assembly=Quantum.UIComposition"
        mc:Ignorable="d"
        Title="ShellView"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        p:AttachedProperties.Shortcuts="{Binding Shortcuts}">

    <DockPanel>
        <uiCore:MainMenuView DataContext="{Binding MainMenuViewModel}"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Top"
                             Height="30"
                             DockPanel.Dock="Top"/>

        <ToolBarTray HorizontalAlignment="Stretch" VerticalAlignment="Top" DockPanel.Dock="Top" Height="50">
            <ToolBar Band="0">
                <Button Content="Button1"/>
            </ToolBar>
            <ToolBar Band="1">
                <Button Content="Button4"/>
            </ToolBar>
        </ToolBarTray>

    </DockPanel>

</Window>
